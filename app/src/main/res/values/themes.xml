<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AdamAsmacaOyunu" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/tahta_yesili</item>
        <item name="colorPrimaryVariant">@color/tahta_yesili_var</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/tahta_kahve</item>
        <item name="colorSecondaryVariant">@color/tahta_kahve_var</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="AppTheme.Launcher" parent="Theme.SplashScreen">

        <item name="windowSplashScreenBackground">@color/tahta_yesili</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.AdamAsmacaOyunu</item>

    </style>

</resources>